{
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "public",
    "rewrites": [{ "source": "/(.*)", "destination": "/index.php" }],
    "functions": {
        "api/*.php": {
            "runtime": "vercel-php@0.6.0"
        }
    },
    "routes": [{ "src": "/(.*)", "dest": "/api/index.php" }],
    "build": {
        "env": {
            "NOW_PHP_DEBUG": "1"
        }
    }
}
